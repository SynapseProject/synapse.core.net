<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler"/>
  </configSections>
  <system.serviceModel>
    <services>
      <service name="Synapse.Core.Runtime.SynapseServer"
               behaviorConfiguration="SynapseServiceBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8000/syn/server"/>
          </baseAddresses>
        </host>
        <!-- this endpoint is exposed at the base address: http://localhost:8000/syn/server  -->
        <endpoint address=""
                  binding="webHttpBinding"
                  contract="Synapse.Core.Runtime.ISynapseServer"
                  behaviorConfiguration="web" />
        <!-- this endpoint is exposed at: http://localhost:8000/syn/server/ws -->
        <endpoint address="ws"
                  binding="wsHttpBinding"
                  contract="Synapse.Core.Runtime.ISynapseServer" />
        <!-- this endpoint is exposed at: http://localhost:8000/syn/server/mex -->
        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="SynapseServiceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="True"/>
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="web">
          <webHttp helpEnabled="true" defaultOutgoingResponseFormat="Json" automaticFormatSelectionEnabled="true" />
        </behavior>
      </endpointBehaviors>
    </behaviors>
  </system.serviceModel>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1"/>
  </startup>
  <log4net>
    <appender name="SynapseServer" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="Synapse.Service.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{ISO8601}|%-5p|(%t)|%m%n"/>
      </layout>
    </appender>
    <root>
      <level value="info"/>
      <appender-ref ref="SynapseServer"/>
    </root>
  </log4net>
</configuration>
